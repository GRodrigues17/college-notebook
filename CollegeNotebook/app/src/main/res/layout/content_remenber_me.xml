<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <br.com.collegenotebook.view.Customs.MontserratLightTextView
        android:id="@+id/txtRemenber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueci minha senha."
        android:textSize="12dp"
        android:paddingTop="8dp"
        android:textColor="@color/colorTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentTop="true" />


    <br.com.collegenotebook.view.Customs.MontserratRegularTextView
        android:id="@+id/txtGetHelp"
        android:textColor="@color/colorTitle"
        android:layout_alignTop="@+id/txtRemenber"
        android:layout_alignBottom="@+id/txtRemenber"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_toRightOf="@+id/txtRemenber"
        android:paddingTop="8dp"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Obter Ajuda"/>

</RelativeLayout>