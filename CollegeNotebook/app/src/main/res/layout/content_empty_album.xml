<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/imgAlbumEmpty"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/txtOpsAlbum"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_emoticon_sad_grey600_48dp"/>

    <br.com.collegenotebook.view.Customs.MontserratBoldTextView
        android:id="@+id/txtOpsAlbum"
        android:layout_width="wrap_content"
        android:textColor="@color/colorText"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/txtAlertEmpty"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Ops!"/>

    <br.com.collegenotebook.view.Customs.MontserratRegularTextView
        android:id="@+id/txtAlertEmpty"
        android:layout_width="wrap_content"
        android:textColor="@color/colorText"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textSize="14dp"
        android:text="As páginas do seu caderno estão vazias,\nclique em               para começar"/>



</RelativeLayout>