<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <br.com.collegenotebook.view.Customs.RobotoBoldTextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        android:textColor="@color/colorText"
        android:text="Password"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/txtPassword"
        app:errorTextAppearance="@style/MyErrorText"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:theme="@style/EditTextNewUser"
            android:textColor="@color/colorText"
            android:textSize="14dp"
            android:imeOptions="actionDone" />
    </android.support.design.widget.TextInputLayout>

    <br.com.collegenotebook.view.Customs.RobotoBoldTextView
        android:id="@+id/txtConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        android:textColor="@color/colorText"
        android:text="Confirm password"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/txtPassword"
        android:layout_marginLeft="110dp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/inputPass"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/txtConfirmPassword"
        app:errorTextAppearance="@style/MyErrorText"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:theme="@style/EditTextNewUser"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:textColor="@color/colorText"
            android:imeOptions="actionDone" />
    </android.support.design.widget.TextInputLayout>

    <Button android:id="@+id/btnCreate"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorTitle"
        android:text="Create Account"
        android:layout_below="@+id/inputPass"
        android:background="@drawable/rounded_box" />



</RelativeLayout>