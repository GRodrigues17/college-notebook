<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/imgTypeComment"
        android:layout_width="50dp"
        android:src="@drawable/ic_marker_like"
        android:layout_height="50dp"/>

    <EditText android:id="@+id/edtCommentPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imgTypeComment" />

    <include layout="@layout/dialog_buttons"
        android:layout_width="match_parent"
        android:layout_below="@+id/edtCommentPin"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>