<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.collegenotebook">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".view.Activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.Activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/LoginTheme">
        </activity>
        <activity
            android:name=".view.Activity.SignUpActivity"
            android:label="@string/app_name"
            android:theme="@style/YourTheme">
        </activity>
        <activity
            android:name=".view.Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".view.Activity.AboutActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".view.Activity.SettingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".view.Activity.CalendarActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".view.Activity.TimeSheetActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".view.Activity.ProfileActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".view.Activity.GalleryActivity"
            android:label="@string/gallery_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".view.Activity.PageDetailActivity"
            android:label="@string/gallery_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>